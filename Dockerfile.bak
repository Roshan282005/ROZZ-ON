# ---- Build stage ----
FROM node:20-alpine AS build
WORKDIR /app

# Faster, reproducible installs
COPY package*.json ./
RUN npm ci

# Build React
COPY . .
RUN npm run build

# ---- Run stage (nginx) ----
FROM nginx:stable-alpine

# Port hint for local runs; Railway will set $PORT
ENV PORT=9000

# Add tini for proper signal handling (optional but nice)
RUN apk add --no-cache bash tini

# Copy a template that uses $PORT and an entrypoint that substitutes it
COPY .docker/nginx/default.conf.template /etc/nginx/templates/default.conf.template
COPY .docker/entrypoint.sh /usr/local/bin/entrypoint.sh
RUN chmod +x /usr/local/bin/entrypoint.sh

# Clean default site & copy build
RUN rm -rf /usr/share/nginx/html/*
COPY --from=build /app/build /usr/share/nginx/html

# Healthcheck (nginx returns 200 on /)
HEALTHCHECK --interval=30s --timeout=5s --start-period=20s CMD wget -qO- http://127.0.0.1:${PORT}/ || exit 1

# Expose a *typical* port (Railway will still route to $PORT after envsub)
EXPOSE 9000

ENTRYPOINT ["/sbin/tini","--","/usr/local/bin/entrypoint.sh"]
CMD ["nginx","-g","daemon off;"]
